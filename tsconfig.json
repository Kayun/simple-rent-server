{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "baseUrl": "./src",
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "es6",
      "es2017",
      "dom"
    ],
    "module": "es6",
    "sourceMap": true,
    "target": "es6",
    "types": [
      "reflect-metadata"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  }
}
